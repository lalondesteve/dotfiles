# include .config/alias in *shrc 
# [ -f $HOME/.config/aliases ] && . $HOME/.config/aliases

[ -s /usr/share/nvm/init-nvm.sh ] && \. /usr/share/nvm/init-nvm.sh
[ -s s~/.local/bin:$PATH ] && export PATH=~/.local/bin:$PATH

command -v pacman 2>&1 >/dev/null  && spac() { sudo pacman -Syu --noconfirm "$@"; }
command -v yay 2>&1 >/dev/null  && syay() { yay -Syu --noconfirm "$@"; }

[ -s "$(brew --prefix nvm)/nvm.sh" ] && \. "$(brew --prefix nvm)/nvm.sh"
[ -s "$(brew --prefix nvm)/etc/bash_completion.d/nvm" ] && \. "$(brew --prefix nvm)/etc/bash_completion.d/nvm"

command -v delta 2>&1 >/dev/null  && d() { delta -s --dark --hyperlinks "$@" }
command -v thefuck 2>&1 >/dev/null  && eval $(thefuck --alias)

export PATH="$(yarn global bin):$PATH"
export PATH=~/.local/bin:$PATH
eval "$(starship init $SHELL)"

alias ve='source .venv/bin/activate'
alias py='uv run python'
alias clera='clear'
alias uvim='uv run nvim'
alias v='nvim'
alias sv='sudo nvim'
alias u="uv run"
alias upgrade="uv lock --upgrade"
alias pre-commit="uv run pre-commit install;uv run pre-commit install --hook-type pre-push"

* {
    font: "Hack Nerd 16";
    g-spacing: 18px;
    g-margin: 0;
    b-color: #000000FF;
    fg-color: #c8d3f5ff;
    fgp-color: #888888FF;
    b-radius: 8px;
    g-padding: 8px;
    hl-color: #33ccffcc;
    hlt-color: #000000FF;
    alt-color: #1a1b26ff;
    wbg-color: #222436CC;
    w-border: 2px solid;
    w-border-color: #33ccffee;
    w-padding: 2px;
}

window {
    transparency: "real";
    width: 450px;
    border-radius: @b-radius;
    background-color: @wbg-color;
    border: @w-border;
    border-color: @w-border-color;
    padding: @w-padding;
}

listview {
    columns: 1;
    lines: 7;
    fixed-height: true;
    fixed-columns: true;
    cycle: false;
    scrollbar: false;
    border: 0px;
}

prompt {
    text-color: @fg-color;
    margin-right: 12px;
}

inputbar {
    children: ["prompt", "entry"];
    spacing: @g-spacing;
    border: @w-border;
    border-color: @w-border-color;
    border-radius: @b-radius;
    padding: 8px;
    background-color: @alt-color;

}

entry {
    placeholder: "";
    text-color: @fg-color;
    placeholder-color: @fgp-color;
    margin-left: 12px;
}

mainbox {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    children: ["inputbar", "listview", "message"];
}

element {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: @g-padding;
    background-color: transparent;
    text-color: @fg-color;
}

element normal.normal {
	background-color: transparent;
	text-color: @fg-color;
}

element alternate.normal {
	background-color: @alt-color;
	text-color: @fg-color;
}

element selected.active {
	background-color: @hl-color;
	text-color: @hlt-color;
}

element selected.normal {
	background-color: @hl-color;
	text-color: @hlt-color;
}

message {
    background-color: #7c818cff;
}

configuration {
  modi: "drun";
  show-icons: true;
  display-drun: "# >_";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
